    </thead>
    <tbody>
      <% users.forEach(u => { %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.first_name %></td>
          <td>@<%= u.username || '-' %></td>
          <td><%= u.downloads_today %></td>
          <td><%= u.premium_limit %></td>
          <td><%= u.premium_until ? u.premium_until.split('T')[0] : '-' %></td>
