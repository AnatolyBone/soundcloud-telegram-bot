<div class="card shadow-sm">
  <div class="card-header">Истекающие подписки</div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Username</th>
            <th>Тариф</th>
            <th>До</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.first_name || '' %></td>
              <td><%= u.username ? '@'+u.username : '' %></td>
              <td><%= u.premium_limit %></td>
              <td><%= u.premium_until ? new Date(u.premium_until).toLocaleDateString('ru-RU') : '-' %></td>
              <td><a href="/user/<%= u.id %>" class="btn btn-sm btn-outline-primary">Открыть</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>