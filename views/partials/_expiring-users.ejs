<% if (expiringSoon.length === 0) { %>
  <p class="text-muted text-center">Нет пользователей с истекающей подпиской.</p>
<% } else { %>
  <ul class="list-group list-group-flush">
    <% expiringSoon.forEach(u => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span><%= u.first_name %> (<%= u.username ? '@' + u.username : 'ID: ' + u.id %>)</span>
        <span class="badge bg-danger rounded-pill">До <%= new Date(u.premium_until).toLocaleDateString() %></span>
      </li>
    <% }) %>
  </ul>
  <nav aria-label="Пагинация" class="mt-3 d-flex justify-content-center">
    <ul class="pagination mb-0">
      <% if (expiringOffset > 0) { %>
        <li class="page-item"><a class="page-link" href="?expiringOffset=<%= expiringOffset - expiringLimit %>&expiringLimit=<%= expiringLimit %>">← Назад</a></li>
      <% } %>
      <% if (expiringOffset + expiringLimit < expiringCount) { %>
        <li class="page-item"><a class="page-link" href="?expiringOffset=<%= expiringOffset + expiringLimit %>&expiringLimit=<%= expiringLimit %>">Вперёд →</a></li>
      <% } %>
    </ul>
  </nav>
  <p class="text-center text-muted small mt-2">Показано <%= expiringOffset + 1 %>–<%= Math.min(expiringOffset + expiringLimit, expiringCount) %> из <%= expiringCount %></p>
<% } %>