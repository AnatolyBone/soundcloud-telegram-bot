<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <meta charset="UTF-8" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
</head>
<body>
  <h1>üìä Admin Dashboard</h1>
  <p>Total users: <%= stats.totalUsers %></p>
  <p>Total downloads: <%= stats.totalDownloads %></p>
  <p>Free: <%= stats.free %>, Plus: <%= stats.plus %>, Pro: <%= stats.pro %>, Unlim: <%= stats.unlimited %></p>

  <h3>üìà –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏ –ø–æ –¥–Ω—è–º</h3>
  <canvas id="regChart" width="800" height="300"></canvas>

  <h3>üë§ –í—Å–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–∏ (<%= users.length %>)</h3>
  <table id="usersTable" border="1" cellpadding="5">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>–ò–º—è</th>
        <th>–°–∫–∞—á–∞–Ω–æ</th>
        <th>–õ–∏–º–∏—Ç</th>
        <th>–¢–∞—Ä–∏—Ñ</th>
        <th>–î–∞—Ç–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏</th>
        <th>–ü–æ—Å–ª–µ–¥–Ω—è—è –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å</th>
        <th>–°–º–µ–Ω–∏—Ç—å —Ç–∞—Ä–∏—Ñ</th>
      </tr>
    </thead>
    <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td>@<%= user.username %></td>
        <td><%= user.first_name %></td>
        <td><%= user.total_downloads || 0 %></td>
        <td><%= user.premium_limit %></td>
        <td>
          <%= user.premium_limit === 10 ? 'Free' :
              user.premium_limit === 50 ? 'Plus' :
              user.premium_limit === 100 ? 'Pro' : 'Unlim' %>
        </td>
        <td><%= new Date(user.created_at).toLocaleDateString() %></td>
        <td><%= user.last_active ? new Date(user.last_active).toLocaleString() : '‚Äì' %></td>
        <td>
          <form method="POST" action="/set-tariff">
            <input type="hidden" name="userId" value="<%= user.id %>">
            <select name="limit">
              <option value="10" <%= user.premium_limit === 10 ? 'selected' : '' %>>üÜì Free</option>
              <option value="50" <%= user.premium_limit === 50 ? 'selected' : '' %>>üéØ Plus</option>
              <option value="100" <%= user.premium_limit === 100 ? 'selected' : '' %>>üí™ Pro</option>
              <option value="1000" <%= user.premium_limit >= 1000 ? 'selected' : '' %>>üíé Unlim</option>
            </select>
            <button type="submit">–°–æ—Ö—Ä–∞–Ω–∏—Ç—å</button>
          </form>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>

  <h3>üì¢ –ú–∞—Å—Å–æ–≤–∞—è —Ä–∞—Å—Å—ã–ª–∫–∞</h3>
  <form method="POST" action="/broadcast">
    <textarea name="message" rows="4" cols="60" placeholder="–í–≤–µ–¥–∏—Ç–µ —Ç–µ–∫—Å—Ç —Å–æ–æ–±—â–µ–Ω–∏—è" required></textarea><br>
    <button type="submit">–û—Ç–ø—Ä–∞–≤–∏—Ç—å –≤—Å–µ–º</button>
  </form>

  <h3>üìù –ü–æ—Å–ª–µ–¥–Ω–∏–µ –æ—Ç–∑—ã–≤—ã:</h3>
  <ul>
    <% if (reviews && reviews.length > 0) { %>
      <% reviews.forEach(r => { %>
        <li><strong><%= new Date(r.time).toLocaleString() %></strong>: <%= r.text %></li>
      <% }) %>
    <% } else { %>
      <li>–û—Ç–∑—ã–≤—ã –æ—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç</li>
    <% } %>
  </ul>

  <script>
    // Chart.js –≥—Ä–∞—Ñ–∏–∫ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–π
    const regData = <%- JSON.stringify(stats.registrationsByDate) %>;
    const regLabels = Object.keys(regData);
    const regCounts = Object.values(regData);

    const ctx = document.getElementById('regChart').getContext('2d');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: regLabels,
        datasets: [{
          label: '–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏',
          data: regCounts,
          borderColor: 'blue',
          backgroundColor: 'rgba(0, 0, 255, 0.1)',
          tension: 0.3,
          fill: true
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true,
            precision: 0
          }
        }
      }
    });

    // DataTables
    $(document).ready(() => {
      $('#usersTable').DataTable({
        order: [[6, 'desc']] // –°–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ –ø–æ –¥–∞—Ç–µ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏
      });
    });
  </script>
</body>
</html>