<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <meta charset="UTF-8" />
  
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
  
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  
  <!-- DataTables JS -->
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    table.dataTable thead th {
      background-color: #f3f3f3;
    }
    canvas {
      max-width: 800px;
      margin-bottom: 40px;
    }
  </style>
</head>
<body>
  <h1>üìä Admin Dashboard</h1>
  
  <p>Total users: <%= stats.totalUsers %></p>
  <p>Total downloads: <%= stats.totalDownloads %></p>
  <p>
    Free: <%= stats.free %>, 
    Plus: <%= stats.plus %>, 
    Pro: <%= stats.pro %>, 
    Unlim: <%= stats.unlimited %>
  </p>

  <!-- –ì—Ä–∞—Ñ–∏–∫–∏ -->
  <h2>üìà –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –ø–æ –¥–∞—Ç–∞–º</h2>

  <h3>–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π</h3>
  <canvas id="registrationsChart"></canvas>

  <h3>–°–∫–∞—á–∏–≤–∞–Ω–∏—è (–∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å)</h3>
  <canvas id="downloadsChart"></canvas>

  <h3>üë§ –í—Å–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–∏ (<%= users.length %>)</h3>
  <table id="usersTable" class="display" style="width:100%" border="1" cellpadding="5">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>–ò–º—è</th>
        <th>–°–∫–∞—á–∞–Ω–æ —Å–µ–≥–æ–¥–Ω—è</th>
        <th>–û–±—â–µ–µ —Å–∫–∞—á–∞–Ω–æ</th>
        <th>–õ–∏–º–∏—Ç</th>
        <th>–î–∞—Ç–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏</th>
        <th>–ü–æ—Å–ª–µ–¥–Ω—è—è –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å</th>
        <th>–°–º–µ–Ω–∏—Ç—å —Ç–∞—Ä–∏—Ñ</th>
      </tr>
    </thead>
    <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td>@<%= user.username %></td>
        <td><%= user.first_name %></td>
        <td><%= user.downloads_today %></td>
        <td><%= user.total_downloads || 0 %></td>
        <td><%= user.premium_limit %></td>
        <td><%= user.created_at ? new Date(user.created_at).toLocaleDateString() : '-' %></td>
        <td><%= user.last_active ? new Date(user.last_active).toLocaleDateString() : '-' %></td>
        <td>
          <form method="POST" action="/set-tariff">
            <input type="hidden" name="userId" value="<%= user.id %>">
            <select name="limit">
              <option value="10" <%= user.premium_limit === 10 ? 'selected' : '' %>>üÜì Free</option>
              <option value="50" <%= user.premium_limit === 50 ? 'selected' : '' %>>üéØ Plus</option>
              <option value="100" <%= user.premium_limit === 100 ? 'selected' : '' %>>üí™ Pro</option>
              <option value="1000" <%= user.premium_limit >= 1000 ? 'selected' : '' %>>üíé Unlim</option>
            </select>
            <button type="submit">–°–æ—Ö—Ä–∞–Ω–∏—Ç—å</button>
          </form>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>

  <h3>üì¢ –ú–∞—Å—Å–æ–≤–∞—è —Ä–∞—Å—Å—ã–ª–∫–∞</h3>
  <form method="POST" action="/broadcast">
    <textarea name="message" rows="4" cols="60" placeholder="–í–≤–µ–¥–∏—Ç–µ —Ç–µ–∫—Å—Ç —Å–æ–æ–±—â–µ–Ω–∏—è" required></textarea><br>
    <button type="submit">–û—Ç–ø—Ä–∞–≤–∏—Ç—å –≤—Å–µ–º</button>
  </form>

  <h3>üìù –ü–æ—Å–ª–µ–¥–Ω–∏–µ –æ—Ç–∑—ã–≤—ã:</h3>
  <ul>
    <% if (reviews && reviews.length > 0) { %>
      <% reviews.forEach(r => { %>
        <li><strong><%= new Date(r.time).toLocaleString() %></strong>: <%= r.text %></li>
      <% }) %>
    <% } else { %>
      <li>–û—Ç–∑—ã–≤—ã –æ—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç</li>
    <% } %>
  </ul>

  <script>
    // –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –¥–∞–Ω–Ω—ã—Ö –¥–ª—è –≥—Ä–∞—Ñ–∏–∫–æ–≤
    const registrationsByDate = <%- JSON.stringify(stats.registrationsByDate) %>;
    const downloadsByDate = <%- JSON.stringify(stats.downloadsByDate) %>;

    // –§—É–Ω–∫—Ü–∏—è —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∏ –ø–æ –∫–ª—é—á—É –¥–∞—Ç—ã
    function sortDateKeys(obj) {
      return Object.keys(obj).sort().reduce((res, key) => {
        res[key] = obj[key];
        return res;
      }, {});
    }

    const sortedRegistrations = sortDateKeys(registrationsByDate);
    const sortedDownloads = sortDateKeys(downloadsByDate);

    // –ì—Ä–∞—Ñ–∏–∫ –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–π
    const ctxReg = document.getElementById('registrationsChart').getContext('2d');
    new Chart(ctxReg, {
      type: 'line',
      data: {
        labels: Object.keys(sortedRegistrations),
        datasets: [{
          label: '–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏',
          data: Object.values(sortedRegistrations),
          borderColor: 'blue',
          backgroundColor: 'rgba(0, 0, 255, 0.2)',
          fill: true,
          tension: 0.2,
        }]
      },
      options: {
        scales: { y: { beginAtZero: true } }
      }
    });

    // –ì—Ä–∞—Ñ–∏–∫ –°–∫–∞—á–∏–≤–∞–Ω–∏–π
    const ctxDown = document.getElementById('downloadsChart').getContext('2d');
    new Chart(ctxDown, {
      type: 'bar',
      data: {
        labels: Object.keys(sortedDownloads),
        datasets: [{
          label: '–°–∫–∞—á–∏–≤–∞–Ω–∏—è',
          data: Object.values(sortedDownloads),
          backgroundColor: 'green'
        }]
      },
      options: {
        scales: { y: { beginAtZero: true } }
      }
    });

    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è DataTables
    $(document).ready(function() {
      $('#usersTable').DataTable({
        order: [[0, 'desc']], // —Å–æ—Ä—Ç–∏—Ä—É–µ–º –ø–æ ID –ø–æ —É–±—ã–≤–∞–Ω–∏—é –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
        pageLength: 25,
        lengthMenu: [10, 25, 50, 100]
      });
    });
  </script>

</body>
</html>