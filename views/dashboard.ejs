<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <meta charset="UTF-8" />
  
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  
  <!-- jQuery –∏ DataTables JS -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  
  <!-- Chart.js –¥–ª—è –≥—Ä–∞—Ñ–∏–∫–æ–≤ -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    h1, h3 {
      margin-bottom: 10px;
    }
    table.dataTable thead th {
      background-color: #f2f2f2;
    }
    .chart-container {
      width: 100%;
      max-width: 900px;
      margin-bottom: 40px;
    }
  </style>
</head>
<body>
  <h1>üìä Admin Dashboard</h1>
  
  <p><strong>–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π:</strong> <%= stats.totalUsers %></p>
  <p><strong>–í—Å–µ–≥–æ –∑–∞–≥—Ä—É–∑–æ–∫:</strong> <%= stats.totalDownloads %></p>
  <p><strong>–¢–∞—Ä–∏—Ñ—ã:</strong> Free: <%= stats.free %>, Plus: <%= stats.plus %>, Pro: <%= stats.pro %>, Unlim: <%= stats.unlimited %></p>
  
  <div class="chart-container">
    <canvas id="registrationsChart" height="150"></canvas>
  </div>
  
  <div class="chart-container">
    <canvas id="downloadsChart" height="150"></canvas>
  </div>

  <h3>üë§ –í—Å–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–∏ (<%= users.length %>)</h3>
  <table id="usersTable" class="display" style="width:100%">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>–ò–º—è</th>
        <th>–°–∫–∞—á–∞–Ω–æ</th>
        <th>–õ–∏–º–∏—Ç</th>
        <th>–î–∞—Ç–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏</th>
        <th>–ü–æ—Å–ª–µ–¥–Ω—è—è –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å</th>
        <th>–°–º–µ–Ω–∏—Ç—å —Ç–∞—Ä–∏—Ñ</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username ? '@' + user.username : '' %></td>
          <td><%= user.first_name %></td>
          <td><%= user.total_downloads %></td>
          <td><%= user.premium_limit %></td>
          <td><%= user.created_at ? new Date(user.created_at).toLocaleDateString() : '' %></td>
          <td><%= user.last_active ? new Date(user.last_active).toLocaleDateString() : '' %></td>
          <td>
            <form method="POST" action="/set-tariff">
              <input type="hidden" name="userId" value="<%= user.id %>">
              <select name="limit">
                <option value="10" <%= user.premium_limit === 10 ? 'selected' : '' %>>üÜì Free</option>
                <option value="50" <%= user.premium_limit === 50 ? 'selected' : '' %>>üéØ Plus</option>
                <option value="100" <%= user.premium_limit === 100 ? 'selected' : '' %>>üí™ Pro</option>
                <option value="1000" <%= user.premium_limit >= 1000 ? 'selected' : '' %>>üíé Unlim</option>
              </select>
              <button type="submit">–°–æ—Ö—Ä–∞–Ω–∏—Ç—å</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h3>üì¢ –ú–∞—Å—Å–æ–≤–∞—è —Ä–∞—Å—Å—ã–ª–∫–∞</h3>
  <form method="POST" action="/broadcast">
    <textarea name="message" rows="4" cols="60" placeholder="–í–≤–µ–¥–∏—Ç–µ —Ç–µ–∫—Å—Ç —Å–æ–æ–±—â–µ–Ω–∏—è" required></textarea><br>
    <button type="submit">–û—Ç–ø—Ä–∞–≤–∏—Ç—å –≤—Å–µ–º</button>
  </form>

  <h3>üìù –ü–æ—Å–ª–µ–¥–Ω–∏–µ –æ—Ç–∑—ã–≤—ã:</h3>
  <ul>
    <% if (reviews && reviews.length > 0) { %>
      <% reviews.forEach(r => { %>
        <li><strong><%= new Date(r.time).toLocaleString() %></strong>: <%= r.text %></li>
      <% }) %>
    <% } else { %>
      <li>–û—Ç–∑—ã–≤—ã –æ—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç</li>
    <% } %>
  </ul>

  <script>
    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è DataTables —Å —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–æ–π –ø–æ –¥–∞—Ç–µ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏ (6-–π —Å—Ç–æ–ª–±–µ—Ü)
    $(document).ready(function () {
      $('#usersTable').DataTable({
        order: [[5, 'desc']],
        language: {
          search: "–ü–æ–∏—Å–∫:",
          lengthMenu: "–ü–æ–∫–∞–∑–∞—Ç—å _MENU_ –∑–∞–ø–∏—Å–µ–π",
          info: "–ü–æ–∫–∞–∑–∞–Ω–æ _START_ - _END_ –∏–∑ _TOTAL_",
          paginate: {
            first: "–ü–µ—Ä–≤–∞—è",
            last: "–ü–æ—Å–ª–µ–¥–Ω—è—è",
            next: "–°–ª–µ–¥—É—é—â–∞—è",
            previous: "–ü—Ä–µ–¥—ã–¥—É—â–∞—è"
          },
          zeroRecords: "–ù–∏—á–µ–≥–æ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ"
        }
      });
    });

    // –î–∞–Ω–Ω—ã–µ –¥–ª—è –≥—Ä–∞—Ñ–∏–∫–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–π
    const registrationsLabels = <%- JSON.stringify(Object.keys(stats.registrationsByDate)) %>;
    const registrationsData = <%- JSON.stringify(Object.values(stats.registrationsByDate)) %>;

    // –î–∞–Ω–Ω—ã–µ –¥–ª—è –≥—Ä–∞—Ñ–∏–∫–∞ –∑–∞–≥—Ä—É–∑–æ–∫ (–µ—Å–ª–∏ –µ—Å—Ç—å)
    const downloadsLabels = <%- JSON.stringify(Object.keys(stats.downloadsByDate)) %>;
    const downloadsData = <%- JSON.stringify(Object.values(stats.downloadsByDate)) %>;

    const ctxReg = document.getElementById('registrationsChart').getContext('2d');
    const registrationsChart = new Chart(ctxReg, {
      type: 'line',
      data: {
        labels: registrationsLabels,
        datasets: [{
          label: '–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π',
          data: registrationsData,
          borderColor: 'rgba(54, 162, 235, 1)',
          backgroundColor: 'rgba(54, 162, 235, 0.2)',
          fill: true,
          tension: 0.3,
          pointRadius: 3,
          pointHoverRadius: 6
        }]
      },
      options: {
        scales: {
          x: { title: { display: true, text: '–î–∞—Ç–∞' } },
          y: { title: { display: true, text: '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ' }, beginAtZero: true }
        },
        plugins: { legend: { display: true } },
        responsive: true,
        maintainAspectRatio: false
      }
    });

    const ctxDown = document.getElementById('downloadsChart').getContext('2d');
    const downloadsChart = new Chart(ctxDown, {
      type: 'line',
      data: {
        labels: downloadsLabels,
        datasets: [{
          label: '–ó–∞–≥—Ä—É–∑–∫–∏ —Ç—Ä–µ–∫–æ–≤',
          data: downloadsData,
          borderColor: 'rgba(255, 99, 132, 1)',
          backgroundColor: 'rgba(255, 99, 132, 0.2)',
          fill: true,
          tension: 0.3,
          pointRadius: 3,
          pointHoverRadius: 6
        }]
      },
      options: {
        scales: {
          x: { title: { display: true, text: '–î–∞—Ç–∞' } },
          y: { title: { display: true, text: '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ' }, beginAtZero: true }
        },
        plugins: { legend: { display: true } },
        responsive: true,
        maintainAspectRatio: false
      }
    });
  </script>
</body>
</html>