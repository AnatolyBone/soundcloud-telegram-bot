<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/admin-lte@4.0.2/dist/js/adminlte.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    $('#usersTable').DataTable({ responsive: true, order: [[5, 'desc']], language: {
      search: "–ü–æ–∏—Å–∫:", lengthMenu: "–ü–æ–∫–∞–∑–∞—Ç—å _MENU_", info: "–ü–æ–∫–∞–∑–∞–Ω–æ _START_‚Äì_END_ –∏–∑ _TOTAL_", paginate: { first: "–ü–µ—Ä–≤–∞—è", last: "–ü–æ—Å–ª–µ–¥–Ω—è—è", next: "‚Üí", previous: "‚Üê" },
      zeroRecords: "–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö"
    }});

    // –ì—Ä–∞—Ñ–∏–∫–∏ –æ—Å—Ç–∞—é—Ç—Å—è –±–µ–∑ –∏–∑–º–µ–Ω–µ–Ω–∏–π
    // ...
    window.changePage = delta => {
      const params = new URLSearchParams(location.search);
      const limit = params.get('expiringLimit') || '<%= expiringLimit %>';
      const offset = parseInt(params.get('expiringOffset') || '0', 10) + delta * parseInt(limit, 10);
      params.set('expiringOffset', offset < 0 ? 0 : offset);
      location.search = params.toString();
    };
  });
</script>

